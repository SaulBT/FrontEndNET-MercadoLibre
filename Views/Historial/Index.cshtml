@model List<frontendnet.Models.Carrito>

@{
    ViewData["Title"] = "Historial de compras";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay compras registradas.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Total</th>
                <th>Fecha de compra</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Total.ToString("C")</td>
                <td>@item.FechaCompra?.ToLocalTime().ToString("g")</td>

                <td>
                    <a asp-controller="Historial" asp-action="Detalle" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Ver</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
